# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
# For LOCAL development (on your computer):
DB_HOST=localhost
DB_PORT=5432
DB_NAME=roguesouls
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# For CLOUD/PRODUCTION (Supabase, AWS RDS, etc.):
# Uncomment and fill these when you set up cloud database:
# DB_HOST=db.xxxxx.supabase.co
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=your_cloud_password
# DB_SSL=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secret (generate a strong random string)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Steam API
STEAM_API_KEY=your-steam-api-key
STEAM_APP_ID=your-steam-app-id

# CORS
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=0
